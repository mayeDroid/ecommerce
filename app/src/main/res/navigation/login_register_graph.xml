<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_register_graph"
    app:startDestination="@id/introductionFragment">

    <fragment
        android:id="@+id/introductionFragment"
        android:name="com.example.ecommerce.fragments.IntroductionFragment"
        tools:layout="@layout/fragment_introduction"
        android:label="IntroductionFragment" >

        <action
            android:id="@+id/action_introductionFragment_to_accountOptionsFragment2"
            app:destination="@id/accountOptionsFragment2" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.ecommerce.fragments.LoginFragment"
        tools:layout="@layout/fragment_login"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registrationFragment"
            app:popUpTo="@id/accountOptionsFragment2" />
    </fragment>
    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.example.ecommerce.fragments.RegistrationFragment"
        tools:layout="@layout/fragment_register"
        android:label="RegisterFragment" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/accountOptionsFragment2" />
    </fragment>
    <fragment
        android:id="@+id/accountOptionsFragment2"
        tools:layout="@layout/fragment_account_options"
        android:name="com.example.ecommerce.fragments.AccountOptionsFragment"
        android:label="AccountOptionsFragment" >
        <action
            android:id="@+id/action_accountOptionsFragment2_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_accountOptionsFragment2_to_registerFragment2"
            app:destination="@id/registrationFragment" />
    </fragment>
</navigation>